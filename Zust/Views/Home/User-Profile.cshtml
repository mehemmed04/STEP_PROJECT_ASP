                        </div>
                        <div class="box-content">
                            <p class="personal-information">
                                @(string.IsNullOrEmpty(Model.Interests) ? Constants.NoData : Model.Interests)
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


